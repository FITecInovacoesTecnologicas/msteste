<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
    	<!-- Console principal -->
        <Console name="Console" target="SYSTEM_OUT">
			<JsonTemplateLayout eventTemplateUri="classpath:LogLayout.json"/>
        </Console>
		<!-- Console para biblioteca com tag -->		
		<Console name="LibraryConsole" target="SYSTEM_OUT">
	        <JsonTemplateLayout eventTemplateUri="classpath:MessagingLogLayout.json"/>
	    </Console>
    </Appenders>

    <Loggers>
    	<!-- Logger raiz -->
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
        
		<!-- Logger para a biblioteca -->
	    <Logger name="com.iubi.messagingservice" level="info" additivity="false">
	        <AppenderRef ref="LibraryConsole"/>
	    </Logger>
    </Loggers>
</Configuration>